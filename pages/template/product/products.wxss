.products-box{
  margin:0 20rpx 20rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
}
.products-item{
  min-height:300rpx;
  width: 49%;
  border-radius: 10rpx;
  margin-right: 0;
  background-color: #F5F6F5;
  text-align: center;
  margin-bottom:10rpx;

}
.products-image{
  width:100%;
  height:100%;
  border-radius: 10rpx;
  position:relative;
  text-align:center;

}
.products-item-bottom{
  text-align: center;
  margin-bottom:20rpx;
  color: #333;
}
.products-item-bottom .name{
  font-size: 28rpx;
  position:absolute;
  bottom:40rpx;
  color:#ccc;
  
}
.products-item-bottom .price{
  font-size: 24rpx;
  position:absolute;
  bottom:10rpx;
  left:48%;
  color:#ccc;
}