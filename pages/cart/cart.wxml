<!--pages/cart/cart.wxml-->
<view class="container cart-container">
    <block wx:if="{{cartData.length>0}}">
        <view class="cart-box">
            <block wx:for="{{cartData}}" wx:key="{{index}}">
                <view class="cart-item">
                    <view class="cart-item-main">
                        <view class="cart-item-checkbox">
                            <image class="" wx:if="{{item.selectStatus}}" src="../../imgs/icon/circle@selected.png"/>
                            <image wx:else src="../../imgs/icon/circle@noselected.png"/>
                        </view>
                    </view>
                </view>
            </block>
        </view>
        <view class="footer-account-box all-account-box"></view>
    </block>
    <view wx:else class="no-data">您还没有添加任何商品</view>
</view>
